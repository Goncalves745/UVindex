<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/main.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <title>SunShield</title>
</head>
<body>
  <div class="logo">
    <h1>SunShield</h1>
    <h2>Real-Time UV Index</h2>
  </div>
    <div class="container">
        <form id="myForm" method="post">
          <div id="formContainer">
          <div>
            <label for="latInput">Latitude:</label>
            <input class = "inpt" type="number" step="0.01" id="latInput" name="lat">
          </div>

          <div>
            <label label for="longInput">Longitude:</label>
            <input class = "inpt" type="number" step="0.01" id="longInput" name="lng">
          </div>

          <div>
            <label for="altInput">Altitude:</label>
            <input class = "inpt" type="number" step="0.01" id="altInput" name="alt">
          </div>

          <div>
            <label for="dateInput">Date:</label>
            <input type="datetime-local" id="altInput" name="dt">          
          </div>

        </div>

        <input id="post" type="submit" value="SUBMIT" formaction="/get-UV">
        </form>

        <div class="response-area">
          <% if(locals.content){ %>
          <p id="conteudo">The max UV for this day is: 
          <%= locals.content %>
          </p>
          <% } %>
        </div>
      </div>
    
</body>
</html>